<div class="container">
    <br />
    <h1>Pay Bills</h1>
    <br />
    <form asp-area="" asp-controller="Transactions" asp-action="PostBillPay" method="post">
        <div class="form-group">
            <label for="utilities">Choose a utility to pay</label>
            <select class="form-control" id="exampleFormControlSelect1" name="bill">
                <option>Enel</option>
                <option>Cez</option>
                <option>Vodafone</option>
                <option>Orange</option>
                <option>Digi</option>
            </select>
        </div>
        <div class="form-group">
            <label for="amount">Amount of money</label>
            <input type="number"
                   class="form-control"
                   id="amount"
                   placeholder="Enter amount"
                   name="amount" />
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Currency</label>
            <select class="form-control" id="exampleFormControlSelect1" name="type">
                <option>RON</option>
                <option>EUR</option>
                <option>USD</option>
            </select>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" required />
            <label class="form-check-label" for="exampleCheck1">
                I confirm that I have read, understand and agree to MyBank
                Policies
            </label>
        </div>
        <button type="submit" class="btn btn-danger">Pay Bill</button>
    </form>
</div>
<div class="container">
    <br />
    <h1>Payment to another account</h1>
    <br />
    <form asp-controller="Transactions" asp-action="PostTransfer" method="post" >
        <div class="form-group">
            <label for="receiverUsername">Receiver's Username</label>
            <input type="text"
                   class="form-control"
                   id="receiverUsername"
                   aria-describedby="usernameHelp"
                   placeholder="Enter receiver's username"
                   name="username" />
        </div>
        <div class="form-group">
            <label for="amount">Amount of money</label>
            <input type="number"
                   class="form-control"
                   id="amount"
                   placeholder="Enter amount"
                   name="amount" />
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Currency</label>
            <select class="form-control" id="exampleFormControlSelect1" name="type">
                <option>RON</option>
                <option>EUR</option>
                <option>USD</option>
            </select>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" required />
            <label class="form-check-label" for="exampleCheck1">
                I confirm that I have read, understand and agree to MyBank
                Policies
            </label>
        </div>      
        <button type="submit" class="btn btn-danger">Send</button>
    </form>
</div>

<iframe hidden name="targetable"></iframe>

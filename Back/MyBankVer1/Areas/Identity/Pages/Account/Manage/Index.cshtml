@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-danger">Save</button>
        </form>
    </div>
</div>
<div class="mt-md-3 row">
    <div class="col-md-6">
        @using (Html.BeginForm("Profile", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
@Html.AntiForgeryToken()
                <fieldset>
                    <div class="editor-label">
                        <label for="profile">Profile Photo</label>
                    </div>
                    <div class="editor-field">
                        <input name="Profile" id="profile" type="file" />
                    </div>
                    <p>
                        <input class="btn btn-danger mt-2" type="submit" value="Save photo" />
                    </p>
                </fieldset>}
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}